#!/usr/bin/env bash

function getStatus()
{
    status=`status.sh | sed -n '3p' | awk '{print $2}' | tr -d "'"`
    [ $1 != $status ] && (echo $status)
}

send_transition.sh stop
getStatus "nil"
while [ $status != 'ready' ]
do
  sleep 2
  getStatus "stopping"
done

send_transition.sh terminate
getStatus "nil"
while [ $status != 'stopped' ]
do
  sleep 2
  getStatus "terminating"
done

