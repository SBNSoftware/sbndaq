daq: 
{
  fragment_receiver: 
  {
    generator: ICARUSTriggerUDP
    #fragment_type: ICARUSTRIG
    max_fragment_size_bytes: 100
    max_fragment_size_bytes_pmt: 100
    fragment_id: 0x4001
    fragment_id_pmt: 0x4002

    board_id: 1

    #request_mode: ignored
    separate_data_thread: false
    #separate_data_thread: true
    generated_fragments_per_event: 1

    ### trigger communication pieces
    config_port: 6342
    config_ip: "192.168.191.79" #for SPEXI
    #ip: "192.168.191.78" #for testing on WireShark
    data_port: 6343
    data_ip: "192.168.191.79" #for SPEXI
    

    ### how many times to retry/wait for init
    n_init_retries: 30
    n_init_timeout: 10000 #ms

  
  
  destinations: { }

  routing_table_config: {
    use_routing_master: false 
  }

  }  


metrics: {
    brFile: {
      metricPluginType: "file"
      level: 3
      fileName: "/scratch/log/br_%p_metrics.log"
      uniquify: true
    }
    
    send_system_metrics: true
    send_process_metrics: true

    graphite: {
     level:10
     metricPluginType: "graphite"
     reporting_interval: 10.0
     host:"192.168.191.18"
     port:2003
     namespace:"icarus.trigger."
    }

  }
}
