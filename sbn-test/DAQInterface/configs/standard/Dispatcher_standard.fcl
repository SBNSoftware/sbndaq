services: {
  ArtdaqSharedMemoryServiceInterface: {
   service_provider: ArtdaqSharedMemoryService
  }
}

daq: {
  aggregator: {
    expected_events_per_bunch: 1
#->>max_fragment_size_bytes: 100000000
    print_event_store_stats: true
    buffer_count: 10
    event_queue_depth: 2
    event_queue_wait_time: 1
    onmon_event_prescale: 1
    is_dispatcher: true
    overwrite_mode: true
    broadcast_buffer_size: 0x200000
	routing_token_config: {
		use_routing_master: false
	}

    init_fragment_count: 2 #must match the number of running dataloggers
    auto_suppression_enabled: false

	sources: { }
  }

  metrics: {
    aggFile: {
      metricPluginType: "file"
      level: 3
      fileName: "/scratch/log/disp00_%UID%_metrics.log"
      uniquify: true
    }
    
    graphite: {
      level:5
      metricPluginType: "graphite"
      reporting_interval: 10.0
      host:"192.168.191.18"
      port:2003
      namespace:"icarus.disp00."
    } 
  }

}

source: {
  module_type: ArtdaqInput
  register_fragment_types: false
}

outputs: {

}

physics: {

}
process_name: DAQDP
